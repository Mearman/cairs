{
  "$schema": "https://raw.githubusercontent.com/Mearman/cairs/main/eir.schema.json",
  "version": "1.0.0",
  "description": "Demonstrates a simple counter pattern with mutation in EIR. A counter variable is initialized and incremented multiple times.",
  "airDefs": [
    {
      "ns": "core",
      "name": "add",
      "params": [
        "a",
        "b"
      ],
      "result": {
        "kind": "int"
      },
      "body": {
        "kind": "ref",
        "id": "a"
      }
    },
    {
      "ns": "core",
      "name": "lt",
      "params": [
        "a",
        "b"
      ],
      "result": {
        "kind": "bool"
      },
      "body": {
        "kind": "ref",
        "id": "a"
      }
    }
  ],
  "nodes": [
    {
      "id": "zero",
      "expr": {
        "kind": "lit",
        "type": {
          "kind": "int"
        },
        "value": 0
      }
    },
    {
      "id": "one",
      "expr": {
        "kind": "lit",
        "type": {
          "kind": "int"
        },
        "value": 1
      }
    },
    {
      "id": "five",
      "expr": {
        "kind": "lit",
        "type": {
          "kind": "int"
        },
        "value": 5
      }
    },
    {
      "id": "init",
      "expr": {
        "kind": "assign",
        "target": "counter",
        "value": "zero"
      }
    },
    {
      "id": "condition",
      "expr": {
        "kind": "call",
        "ns": "core",
        "name": "lt",
        "args": [
          "counter",
          "five"
        ]
      }
    },
    {
      "id": "nextValue",
      "expr": {
        "kind": "call",
        "ns": "core",
        "name": "add",
        "args": [
          "counter",
          "one"
        ]
      }
    },
    {
      "id": "increment",
      "expr": {
        "kind": "assign",
        "target": "counter",
        "value": "nextValue"
      }
    },
    {
      "id": "countLoop",
      "expr": {
        "kind": "while",
        "cond": "condition",
        "body": "increment"
      }
    },
    {
      "id": "result",
      "expr": {
        "kind": "var",
        "name": "counter"
      }
    }
  ],
  "result": "result",
  "expected_result": 5,
  "note": "Counter starts at 0 and increments while counter < 5. Final counter value is 5."
}

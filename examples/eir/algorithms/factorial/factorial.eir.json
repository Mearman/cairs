{
  "$schema": "https://raw.githubusercontent.com/Mearman/cairs/main/eir.schema.json",
  "version": "1.0.0",
  "description": "Computes factorial using a while loop with mutation in EIR. Demonstrates iterative algorithm with accumulating result.",
  "airDefs": [
    {
      "ns": "core",
      "name": "add",
      "params": [
        "a",
        "b"
      ],
      "result": {
        "kind": "int"
      },
      "body": {
        "kind": "ref",
        "id": "a"
      }
    },
    {
      "ns": "core",
      "name": "sub",
      "params": [
        "a",
        "b"
      ],
      "result": {
        "kind": "int"
      },
      "body": {
        "kind": "ref",
        "id": "a"
      }
    },
    {
      "ns": "core",
      "name": "mul",
      "params": [
        "a",
        "b"
      ],
      "result": {
        "kind": "int"
      },
      "body": {
        "kind": "ref",
        "id": "a"
      }
    },
    {
      "ns": "core",
      "name": "gt",
      "params": [
        "a",
        "b"
      ],
      "result": {
        "kind": "bool"
      },
      "body": {
        "kind": "ref",
        "id": "a"
      }
    }
  ],
  "nodes": [
    {
      "id": "zero",
      "expr": {
        "kind": "lit",
        "type": {
          "kind": "int"
        },
        "value": 0
      }
    },
    {
      "id": "one",
      "expr": {
        "kind": "lit",
        "type": {
          "kind": "int"
        },
        "value": 1
      }
    },
    {
      "id": "five",
      "expr": {
        "kind": "lit",
        "type": {
          "kind": "int"
        },
        "value": 5
      }
    },
    {
      "id": "initN",
      "expr": {
        "kind": "assign",
        "target": "n",
        "value": "five"
      }
    },
    {
      "id": "initResult",
      "expr": {
        "kind": "assign",
        "target": "result",
        "value": "one"
      }
    },
    {
      "id": "condition",
      "expr": {
        "kind": "call",
        "ns": "core",
        "name": "gt",
        "args": [
          "n",
          "zero"
        ]
      }
    },
    {
      "id": "currentResult",
      "expr": {
        "kind": "var",
        "name": "result"
      }
    },
    {
      "id": "currentN",
      "expr": {
        "kind": "var",
        "name": "n"
      }
    },
    {
      "id": "mulResult",
      "expr": {
        "kind": "call",
        "ns": "core",
        "name": "mul",
        "args": [
          "currentResult",
          "currentN"
        ]
      }
    },
    {
      "id": "updateResult",
      "expr": {
        "kind": "assign",
        "target": "result",
        "value": "mulResult"
      }
    },
    {
      "id": "nextN",
      "expr": {
        "kind": "call",
        "ns": "core",
        "name": "sub",
        "args": [
          "n",
          "one"
        ]
      }
    },
    {
      "id": "updateN",
      "expr": {
        "kind": "assign",
        "target": "n",
        "value": "nextN"
      }
    },
    {
      "id": "loopBody",
      "expr": {
        "kind": "seq",
        "first": "updateResult",
        "then": "updateN"
      }
    },
    {
      "id": "factorialLoop",
      "expr": {
        "kind": "while",
        "cond": "condition",
        "body": "loopBody"
      }
    },
    {
      "id": "finalResult",
      "expr": {
        "kind": "var",
        "name": "result"
      }
    }
  ],
  "result": "finalResult",
  "expected_result": 120,
  "note": "Computes 5! = 5 * 4 * 3 * 2 * 1 = 120 using mutation and a while loop."
}

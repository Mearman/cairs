{
  "$schema": "https://raw.githubusercontent.com/Mearman/cairs/main/eir.schema.json",
  "version": "1.0.0",
  "description": "Demonstrates accumulation pattern using iter loop with mutation. Accumulates squared values from a list.",
  "airDefs": [
    {
      "ns": "core",
      "name": "add",
      "params": [
        "a",
        "b"
      ],
      "result": {
        "kind": "int"
      },
      "body": {
        "kind": "ref",
        "id": "a"
      }
    },
    {
      "ns": "core",
      "name": "mul",
      "params": [
        "a",
        "b"
      ],
      "result": {
        "kind": "int"
      },
      "body": {
        "kind": "ref",
        "id": "a"
      }
    }
  ],
  "nodes": [
    {
      "id": "zero",
      "expr": {
        "kind": "lit",
        "type": {
          "kind": "int"
        },
        "value": 0
      }
    },
    {
      "id": "numbers",
      "expr": {
        "kind": "lit",
        "type": {
          "kind": "list",
          "of": {
            "kind": "int"
          }
        },
        "value": [
          {
            "kind": "int",
            "value": 1
          },
          {
            "kind": "int",
            "value": 2
          },
          {
            "kind": "int",
            "value": 3
          },
          {
            "kind": "int",
            "value": 4
          },
          {
            "kind": "int",
            "value": 5
          }
        ]
      }
    },
    {
      "id": "initAccum",
      "expr": {
        "kind": "assign",
        "target": "sumOfSquares",
        "value": "zero"
      }
    },
    {
      "id": "currentAccum",
      "expr": {
        "kind": "var",
        "name": "sumOfSquares"
      }
    },
    {
      "id": "element",
      "expr": {
        "kind": "var",
        "name": "n"
      }
    },
    {
      "id": "squared",
      "expr": {
        "kind": "call",
        "ns": "core",
        "name": "mul",
        "args": [
          "element",
          "element"
        ]
      }
    },
    {
      "id": "newAccum",
      "expr": {
        "kind": "call",
        "ns": "core",
        "name": "add",
        "args": [
          "currentAccum",
          "squared"
        ]
      }
    },
    {
      "id": "updateAccum",
      "expr": {
        "kind": "assign",
        "target": "sumOfSquares",
        "value": "newAccum"
      }
    },
    {
      "id": "accumulateLoop",
      "expr": {
        "kind": "iter",
        "var": "n",
        "iter": "numbers",
        "body": "updateAccum"
      }
    },
    {
      "id": "result",
      "expr": {
        "kind": "var",
        "name": "sumOfSquares"
      }
    }
  ],
  "result": "result",
  "expected_result": 55,
  "note": "Accumulates 1^2 + 2^2 + 3^2 + 4^2 + 5^2 = 1 + 4 + 9 + 16 + 25 = 55."
}

{
  "name": "spiral",
  "version": "0.1.0",
  "description": "SPIRAL: Stratified Progressive Intermediate Representation Architecture Language",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mearman/SPIRAL.git"
  },
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./schemas": "./dist/schemas.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "tsx --test \"test/**/*.test.ts\"",
    "test:seq": "for f in test/async-*.test.ts test/lir-async.test.ts test/scheduler.test.ts; do echo \"Running $f...\"; tsx --test \"$f\" || exit 1; done",
    "test:types": "tsc --noEmit -p tsconfig.test.json",
    "test:examples": "tsx --test \"examples/*.ts\"",
    "test:coverage": "c8 tsx --test \"test/**/*.test.ts\"",
    "test:coverage:html": "c8 --reporter=html --reporter=text tsx --test \"test/**/*.test.ts\"",
    "test:coverage:open": "c8 --reporter=html --reporter=text tsx --test \"test/**/*.test.ts\" && open coverage/index.html",
    "lint": "eslint . && tsc --noEmit",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "run-example": "tsx examples/cli.ts",
    "examples": "tsx examples/cli.ts",
    "examples:list": "tsx examples/cli.ts --list",
    "examples:validate": "tsx examples/cli.ts --validate",
    "examples:help": "tsx examples/cli.ts --help",
    "ci": "npm run lint && npm run test:types && npm run test && npm run test:examples",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@eslint/js": "9.39.2",
    "@eslint/markdown": "7.5.1",
    "@types/node": "25.0.10",
    "c8": "10.1.3",
    "eslint": "9.39.2",
    "eslint-plugin-jsonc": "2.21.0",
    "globals": "17.1.0",
    "husky": "9.1.7",
    "jiti": "2.6.1",
    "lint-staged": "16.2.7",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.53.1"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "packageManager": "npm@11.2.0",
  "c8": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts",
      "src/**/*.spec.ts"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "all": true
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ],
    "eslint.config.ts": [
      "eslint --fix"
    ],
    "*.json": [
      "eslint --fix"
    ],
    "*.md": [
      "eslint --fix"
    ]
  }
}

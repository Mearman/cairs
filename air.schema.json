{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/Mearman/SPIRAL/refs/heads/main/air.schema.json",
  "title": "AIR (Algebraic IR)",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "nodes", "result"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "functionSigs": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/functionSig"
      },
      "default": []
    },
    "airDefs": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/airDef"
      },
      "default": []
    },
    "nodes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/node"
      }
    },
    "result": {
      "$ref": "#/$defs/id"
    }
  },
  "$defs": {
    "id": {
      "type": "string",
      "pattern": "^[A-Za-z][A-Za-z0-9_\\-]*$"
    },
    "type": {
      "oneOf": [
        {
          "$ref": "#/$defs/type_bool"
        },
        {
          "$ref": "#/$defs/type_int"
        },
        {
          "$ref": "#/$defs/type_float"
        },
        {
          "$ref": "#/$defs/type_string"
        },
        {
          "$ref": "#/$defs/type_set"
        },
        {
          "$ref": "#/$defs/type_list"
        },
        {
          "$ref": "#/$defs/type_map"
        },
        {
          "$ref": "#/$defs/type_option"
        },
        {
          "$ref": "#/$defs/type_opaque"
        }
      ]
    },
    "type_bool": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind"],
      "properties": {
        "kind": {
          "const": "bool"
        }
      }
    },
    "type_int": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind"],
      "properties": {
        "kind": {
          "const": "int"
        }
      }
    },
    "type_float": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind"],
      "properties": {
        "kind": {
          "const": "float"
        }
      }
    },
    "type_string": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind"],
      "properties": {
        "kind": {
          "const": "string"
        }
      }
    },
    "type_set": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "of"],
      "properties": {
        "kind": {
          "const": "set"
        },
        "of": {
          "$ref": "#/$defs/type"
        }
      }
    },
    "type_list": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "of"],
      "properties": {
        "kind": {
          "const": "list"
        },
        "of": {
          "$ref": "#/$defs/type"
        }
      }
    },
    "type_map": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "key", "value"],
      "properties": {
        "kind": {
          "const": "map"
        },
        "key": {
          "$ref": "#/$defs/type"
        },
        "value": {
          "$ref": "#/$defs/type"
        }
      }
    },
    "type_option": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "of"],
      "properties": {
        "kind": {
          "const": "option"
        },
        "of": {
          "$ref": "#/$defs/type"
        }
      }
    },
    "type_opaque": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "name"],
      "properties": {
        "kind": {
          "const": "opaque"
        },
        "name": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "fnRef": {
      "type": "object",
      "additionalProperties": false,
      "required": ["ns", "name"],
      "properties": {
        "ns": {
          "type": "string",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "functionSig": {
      "type": "object",
      "additionalProperties": false,
      "required": ["fn", "params", "returns", "pure"],
      "properties": {
        "fn": {
          "$ref": "#/$defs/fnRef"
        },
        "params": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/type"
          }
        },
        "returns": {
          "$ref": "#/$defs/type"
        },
        "pure": {
          "type": "boolean"
        }
      }
    },
    "param": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "type"],
      "properties": {
        "name": {
          "$ref": "#/$defs/id"
        },
        "type": {
          "$ref": "#/$defs/type"
        }
      }
    },
    "airDef": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "name", "params", "returns", "body"],
      "properties": {
        "kind": {
          "const": "airDef"
        },
        "name": {
          "$ref": "#/$defs/id"
        },
        "params": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/param"
          }
        },
        "returns": {
          "$ref": "#/$defs/type"
        },
        "body": {
          "$ref": "#/$defs/exprAir"
        }
      }
    },
    "node": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "type", "expr"],
      "properties": {
        "id": {
          "$ref": "#/$defs/id"
        },
        "type": {
          "$ref": "#/$defs/type"
        },
        "expr": {
          "$ref": "#/$defs/exprAir"
        }
      }
    },
    "exprAir": {
      "oneOf": [
        {
          "$ref": "#/$defs/expr_lit"
        },
        {
          "$ref": "#/$defs/expr_ref"
        },
        {
          "$ref": "#/$defs/expr_var"
        },
        {
          "$ref": "#/$defs/expr_call"
        },
        {
          "$ref": "#/$defs/expr_if"
        },
        {
          "$ref": "#/$defs/expr_let"
        },
        {
          "$ref": "#/$defs/expr_airRef"
        },
        {
          "$ref": "#/$defs/expr_predicate"
        }
      ]
    },
    "expr_lit": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "value"],
      "properties": {
        "kind": {
          "const": "lit"
        },
        "value": {}
      }
    },
    "expr_ref": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "id"],
      "properties": {
        "kind": {
          "const": "ref"
        },
        "id": {
          "$ref": "#/$defs/id"
        }
      }
    },
    "expr_var": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "name"],
      "properties": {
        "kind": {
          "const": "var"
        },
        "name": {
          "$ref": "#/$defs/id"
        }
      }
    },
    "expr_call": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "fn", "args"],
      "properties": {
        "kind": {
          "const": "call"
        },
        "fn": {
          "$ref": "#/$defs/fnRef"
        },
        "args": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/exprAir"
          }
        }
      }
    },
    "expr_if": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "cond", "then", "else"],
      "properties": {
        "kind": {
          "const": "if"
        },
        "cond": {
          "$ref": "#/$defs/exprAir"
        },
        "then": {
          "$ref": "#/$defs/exprAir"
        },
        "else": {
          "$ref": "#/$defs/exprAir"
        }
      }
    },
    "expr_let": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "name", "value", "body"],
      "properties": {
        "kind": {
          "const": "let"
        },
        "name": {
          "$ref": "#/$defs/id"
        },
        "value": {
          "$ref": "#/$defs/exprAir"
        },
        "body": {
          "$ref": "#/$defs/exprAir"
        }
      }
    },
    "expr_airRef": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "name", "args"],
      "properties": {
        "kind": {
          "const": "airRef"
        },
        "name": {
          "$ref": "#/$defs/id"
        },
        "args": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/exprAir"
          }
        }
      }
    },
    "expr_predicate": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "param", "body"],
      "properties": {
        "kind": {
          "const": "predicate"
        },
        "param": {
          "$ref": "#/$defs/id"
        },
        "body": {
          "$ref": "#/$defs/exprAir"
        }
      }
    }
  }
}
